<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <title>Shorten Me</title>
  <link rel="stylesheet" type="text/css" href="/bower_components/semantic/dist/semantic.min.css">
  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
  <script src="/bower_components/angular/angular.min.js"></script>
  <script src="/app/app.js"></script>
  <style type="text/css">

    .outputText{
      text-color:white;
    }

    .segment {
      min-height: 600px;
      padding: 1em 0em;
    }

    h2 {
      font-size: 1.7em;
      font-weight: normal;
    }

  </style>

</head>
<body>

<!-- Page Contents -->
<div class="pusher">
  <div class="ui inverted vertical center aligned segment">
    <h2>Original URL: <i><a href="<%= urlObject.visits %>"><%= urlObject.url %></a></i></h2>
    <h2>Generated short id: <i><%= urlObject.shortened %></i></h2>
    <h2>Number of visits: <i><%= urlObject.visits %></i></h2>
    <table class="ui inverted celled padded table">
      <thead>
        <tr>
          <th colspan="2">Details of User</th>
        </tr>
        <tr>
          <th>IP</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% urlObject.details.forEach(function(detailObject){ %>
          <tr>
            <td><%= detailObject.ip %></td>
            <td><%= detailObject.time %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>

</div>

</body>

</html>
